{% extends 'nadc/base.html' %}
{% load humanize %}
{% load staticfiles %}
{% load humanize %}

{% block title %}{% endblock %}

{% block morestyles %}
<link rel="stylesheet" href="/static/nadc/donor.css">
{% endblock %}

{% block content %}


<div class="container">


<br><br><br>
<h1>{% if name.standard_name %}{{ name.standard_name }}{% else %}{{ name.name }}{% endif %}</h1>

{% if gives %}
<h2>GIVES</h2>
<table>
<th>
<td>Recipient</td>
<td>Amount</td>
<td>Date</td>
</th>
{% for gift in gives %}
<tr>
<td>{{ gift.recipient.name }}</td>
{% if gift.pledge = 0 %}{% if gift.cash > 0 %}<td>${{ gift.cash|intcomma }}</td>{% else %}<td>${{ gift.inkind|intcomma }}</td>{% endif %}{% endif %}
<td>{{ gift.donation_date }}</td>
<tr>
{% endfor %}
</table>

<h3>Top committees supported</h3>
{% for row in topgives %}
{{ row.recipient__name|title }}, ${{ row.totalcash|intcomma }}<br>
{% endfor %}
{% endif %}

{% if gets %}
<br><br>
<h2>GETS</h2>
<table>
<th>
<td>Donor</td>
<td>Amount</td>
<td>Date</td>
</th>
{% for donation in gets %}
{% if donation.pledge = 0 %}
<tr>
<td>{{ donation.donor.name|title }}
{% if donation.cash > 0 %}<td>${{ donation.cash|intcomma }}</td>{% else %}<td>${{ donation.inkind|intcomma }}</td>{% endif %}
<td>{{ donation.donation_date }}</td>
</tr>
{% endif %}
{% endfor %}
</table>

<h3>Top donors</h3>
{% for row in topgets %}
{{ row.donor__standard_name|title }}, ${{ row.totalcash|intcomma }}<br>
{% endfor %}
{% endif %}

{% if expenditures %}
<br><br>
<h2>EXPENDITURES</h2>
<table>
<th>
<td>Paid to</td>
<td>For</td>
<td>On</td>
<td>Amount</td>
</th>
{% for exp in expenditures %}
<tr>
<td>{{ exp.payee|title }}</td>
<td>{% if exp.exp_purpose %}{{ exp.exp_purpose }}{% else %}Not reported{% endif %}</td>
<td>{{ exp.exp_date }}</td>
<td>{% if exp.amount > 0 %}${{ exp.amount|intcomma }}{% else %}${{ exp.in_kind|intcomma }} (In-kind){% endif %}</td>
</tr>
{% endfor %}
</table>

<br><br>
<h2>LOANS</h2>
<h3>Loans taken</h3>
<table>
<tr>




{% endblock %}

</div>
